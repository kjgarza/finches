{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js App",
  "extends": "./base.json",
  "compilerOptions": {
    "composite": false,
    "jsx": "preserve",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "module": "ESNext",
    "plugins": [{ "name": "next" }],
    "target": "ES2022"
  },
  "include": ["src", "next-env.d.ts"],
  "exclude": ["node_modules", ".next", "dist"]
}
